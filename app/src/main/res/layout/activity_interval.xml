    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Interval">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subject"
            android:text="Subject"
            android:textSize="35sp"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:layout_below="@+id/user_image"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="15dp"
            android:fontFamily="casual"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/subject"
            android:layout_marginTop="35dp"
            android:id="@+id/grade_text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimum"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="15dp"
            android:fontFamily="casual"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_below="@+id/subject"
            android:layout_toRightOf="@+id/grade_text"
            android:layout_marginTop="35dp"
            android:id="@+id/min_text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maximum"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="15dp"
            android:fontFamily="casual"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/subject"
            android:layout_toRightOf="@+id/min_text"
            android:layout_marginTop="35dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_view1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            android:layout_below="@+id/grade_text"
            app:cardBackgroundColor="@android:color/white"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="25dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O"
                    android:id="@+id/o_grade"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="20dp"
                    android:padding="15dp"
                    android:background="#39ff14"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/o_grade"
                    android:layout_marginLeft="80dp"
                    android:inputType="numberSigned"
                    android:layout_marginTop="15dp"
                    android:id="@+id/o_min"

                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/o_min"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="100dp"
                    android:inputType="numberSigned"
                    android:id="@+id/o_max"

                    />

            </RelativeLayout>




        </android.support.v7.widget.CardView>



